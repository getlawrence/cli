{
  "analysis": {
    "exclude_paths": [
      ".git",
      "node_modules",
      "vendor",
      "__pycache__",
      ".venv",
      "venv",
      "env",
      "build",
      "dist",
      "target"
    ],
    "max_depth": 10,
    "follow_symlinks": false,
    "min_severity": "info"
  },
  "output": {
    "format": "text",
    "detailed": false,
    "color": true
  },
  "custom_detectors": [],
  "languages": {
    "go": {
      "enabled": true,
      "file_patterns": [
        "**/*.go"
      ],
      "package_files": [
        "go.mod",
        "go.sum"
      ],
      "otel_patterns": [
        "go.opentelemetry.io/*"
      ]
    },
    "python": {
      "enabled": true,
      "file_patterns": [
        "**/*.py"
      ],
      "package_files": [
        "requirements.txt",
        "pyproject.toml",
        "setup.py",
        "Pipfile"
      ],
      "otel_patterns": [
        "opentelemetry*"
      ]
    }
  }
}